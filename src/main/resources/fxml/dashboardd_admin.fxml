<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane prefHeight="490.0" prefWidth="750.0" styleClass="mainFxmlClass" stylesheets="@../style/dashboardd_admin.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.dashboardd_admincontroller">

    <children>
        <AnchorPane prefHeight="490.0" prefWidth="750.0" styleClass="mainFxmlClass" stylesheets="@../style/dashboardd_admin.css">

            <!-- ================= PANEL KIRI ================= -->
            <AnchorPane prefHeight="500.0" prefWidth="150.0" styleClass="left-form" stylesheets="@../style/dashboardd_admin.css">

                <children>

                    <FontIcon iconColor="#fff8f8" iconLiteral="fas-user" iconSize="80" layoutX="40.0" layoutY="80.0" />

                    <Text fill="#fffbfb" layoutX="30.0" layoutY="120.0" text="Welcome,">
                        <font>
                            <Font name="Berlin Sans FB" size="20.0" />
                        </font>
                    </Text>

                    <Label layoutX="40.0" layoutY="124.0" text="Admin" textFill="#c4b2ff">
                        <font>
                            <Font name="Arial Black" size="17.0" />
                        </font>
                    </Label>

                    <!-- MENU -->
                    <VBox layoutX="10.0" layoutY="200.0" prefWidth="130.0" spacing="10">

                        <!-- âœ… Sesuai dengan Java -->
                        <Button fx:id="btnDashboard" onAction="#openDashboard" prefHeight="31.0" prefWidth="115.0" styleClass="title-label" stylesheets="@../style/dashboardd_admin.css" text="Dashboard" />

                        <Button fx:id="btnAvailableBuses" onAction="#openAvailableBuses" text="Available Buses" />

                        <Button fx:id="btnBookingTicket" onAction="#openBookingTicket" text="Booking Ticket" />

                        <Button fx:id="btnCustomers" onAction="#openCustomers" prefHeight="31.0" prefWidth="113.0" text="Customers" />

                    </VBox>

                    <Button fx:id="btnLogout" layoutX="10.0" layoutY="450.0" onAction="#logout" text="Log Out" />

                </children>
            </AnchorPane>


            <!-- ================= STATISTIC CARDS ================= -->
            <HBox layoutX="189.0" layoutY="14.0" spacing="25.0">
   
                <!-- Available Bus -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="card">
                    <children>
   
                        <Label layoutX="15" layoutY="15" style="-fx-text-fill:white;" text="Available Bus">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
   
                        <Label fx:id="labelAvailableBus" layoutX="15" layoutY="45" style="-fx-text-fill:white; -fx-font-size:18px;" />
   
                    </children>
                </AnchorPane>

                <!-- Income Today -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="detail-button">
                    <children>

                        <Label layoutX="15" layoutY="15" prefWidth="105.0" style="-fx-text-fill:white;" text="Income Today" />

                        <Label fx:id="labelIncomeToday" layoutX="15" layoutY="45" style="-fx-text-fill:white; -fx-font-size:18px;" />

                    </children>
                </AnchorPane>

                <!-- Total Income -->
                <AnchorPane prefHeight="100.0" prefWidth="160.0" styleClass="card">
                    <children>

                        <Label layoutX="15" layoutY="15" style="-fx-text-fill:white;" text="Total Income" textFill="#030000" />

                        <Label fx:id="labelTotalIncome" layoutX="15" layoutY="45" style="-fx-text-fill:white; -fx-font-size:18px;" />

                    </children>
                </AnchorPane>

            </HBox>

        </AnchorPane>
    </children>
</StackPane>
